<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Order Flow</title>
    <!-- ? FONT AWESOME LINK  -->
    <script src="https://kit.fontawesome.com/d6b3f4e3c1.js" crossorigin="anonymous"></script>
    
    <!--? BOOTSTRAP CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <!--? LOCAL CSS LINK  -->
    <link rel="stylesheet" href="css/index.css">
</head>

<body>

    <header>
        <!-- NAVBAR  -->
        <nav id="navbar" class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid d-flex justify-content-between" style="padding: 0.5rem 10%">
                <div class="logo">
                    <a class="navbar-brand" href="/"><i class="fas fa-home"></i></a>
                </div>

                <div class="login-btn">
                    <a href="/auth/<%= loginOption %>"><%= loginOption %></a>
                </div>
            </div>
        </nav>

        <!-- ?Error ALERT BOX  -->

        <% if(alertMessage.length> 0) { %>

            <div class="alert alert-danger d-flex align-items-center" role="alert" style="
            height: 4rem;
            margin-bottom: 0;
            padding: 0 6%;">
                <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Danger:" style="width: 2rem;">
                    <use xlink:href="#exclamation-triangle-fill" />
                </svg>
                <div>
                    <strong> Error, </strong>
                    <%= alertMessage %>
                </div>
            </div>

            <% } %>

        <!-- ?SUCCESS ALERT BOX  -->
        <% if( message.length> 0) { %>
            <div class="alert alert-success d-flex align-items-center alert-dismissible fade show" role="alert" style="
					height: 4rem;
					margin-bottom: 0;
					padding: 0 6%;">
                <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Success:" style="width: 2rem;">
                    <use xlink:href="#check-circle-fill" />
                </svg>
                <div>
                    <strong>Sucessfully :</strong>
                    <%= message %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

            </div>
            <% } %>
    </header>