<%- include('../partials/header') %>
    <link rel="stylesheet" href="../css/index.css">


    <section class="register-page">
        <div class="registration-page">
            <div class="register-form">

                <div class="registration-heading">
                    <h1>Create Your Account</h1>
                </div>

                <div class="register-option">
                    <ul class="nav nav-pills mb-3  button-group" id="pills-tab" role="tablist">
                        <li class="nav-item btn-section" role="presentation">
                            <button class="nav-link active app-btn-style" id="pills-home-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home"
                                aria-selected="true">Manufacturer</button>
                        </li>
                        <li class="nav-item btn-section" role="presentation">
                            <button class="nav-link app-btn-style" id="pills-profile-tab" data-bs-toggle="pill"
                                data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile"
                                aria-selected="false">Transporter</button>
                        </li>
                    </ul>

                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active from-container" id="pills-home" role="tabpanel"
                            aria-labelledby="pills-home-tab" tabindex="0">

                            <div class="Register-container">
                                <!-- *Manufacturer  -->
                                <div class="row align-items-center ">

                                    <!-- Register -->
                                    <div class="col-md-4  col-lg-5 form-container">
                                        <main class="form-signin m-auto signIn-form">
                                            <form action="/auth/manufacturer/register" method="post">
                                                <h1 class="h3 mb-3 fw-normal signUp-heading">Enter your details</h1>
                                                
                                                <div class="-floating">
                                                    <input type="email" name="email" class="form-control input_box"
                                                        id="floatingPassword" placeholder="Email" required>
                                                    <label for="floatingPassword">Email</label>
                                                </div>
                                                <div class="form-floating">
                                                    <input type="text" name="address" class="form-control input_box"
                                                        id="floatingPassword" placeholder="Phone" required>
                                                    <label for="floatingPassword">Address</label>
                                                </div>
                                                <div class="form-floating">
                                                    <input type="password" name="password"
                                                        class="form-control input_box" id="floatingPassword"
                                                        placeholder="Password" required>
                                                    <label for="floatingPassword">Password</label>
                                                </div>
                                                <input type="hidden" name="user" value="manufacturer">
                                                <button type="submit" class="w-100 btn btn-lg btn-primary signUp-btn "
                                                    type="submit">Create</button>
                                            </form>
                                        </main>
                                    </div>
                                </div>
                            </div>
                        </div>

                            <!--* TRANSPORTER REGISTER  -->
                        <div class="tab-pane fade from-container" id="pills-profile" role="tabpanel"
                            aria-labelledby="pills-profile-tab" tabindex="0">
                            <div class="login-container">

                                <!--* Transporter  -->
                                <div class="row align-items-center ">
                               
                                    <div class="col-md-4  col-lg-5 form-container">
                                        <main class="form-signin m-auto signIn-form">
                                            <form action="/auth/transporter/register" method="post">
                                                <h1 class="h3 mb-3 fw-normal signUp-heading">Enter your details</h1>
                                                
                                                <div class="form-floating">
                                                    <input type="email" name="email" class="form-control input_box"
                                                        id="floatingPassword" placeholder="Email" required>
                                                    <label for="floatingPassword">Email</label>
                                                </div>
                                                <div class="form-floating">
                                                    <input type="text" name="address" class="form-control input_box"
                                                        id="floatingPassword" placeholder="Phone" required>
                                                    <label for="floatingPassword">Address</label>
                                                </div>
                                                <div class="form-floating">
                                                    <input type="password" name="password"
                                                        class="form-control input_box" id="floatingPassword"
                                                        placeholder="Password" required>
                                                    <label for="floatingPassword">Password</label>
                                                </div>
                                                <input type="hidden" name="user" value="transporter">
                                                <button class="w-100 btn btn-lg btn-primary signUp-btn"
                                                    type="submit">Create</button>
                                            </form>
                                        </main>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

    </section>

    <%- include('../partials/footer') %>