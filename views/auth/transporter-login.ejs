<%- include('../partials/header') %>
    <link rel="stylesheet" href="/css/index.css">


    <section class="login-page">
        <div class="login-page-container">
            <!-- MAIN  -->
            <div class="row align-items-center py-5">

                <div class="heading">
                    <h1>Transporter</h1>
                </div>

            
                <div class="col-md-4  col-lg-5 form-container">
                    <main class="form-signin m-auto signIn-form">
                        <form action="/auth/transporter/login" method="post">
                            <h1 class="h3 mb-3 fw-normal signUp-heading">Login Account</h1>
                            <div class="form-floating">
                                <input type="email" name="email" class="form-control input_box" id="floatingInput"
                                    placeholder="name@example.com">
                                <label for="floatingInput">Email address</label>
                            </div>
                            <div class="form-floating">
                                <input type="password" name="password" class="form-control input_box"
                                    id="floatingPassword" placeholder="Password">
                                <label for="floatingPassword">Password</label>
                            </div>
                            <input type="hidden" name="user" value="transporter">
                            <button class="w-100 btn btn-lg btn-primary signUp-btn " type="submit">Log in</button>
                        </form>
                    </main>
                </div>

            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>